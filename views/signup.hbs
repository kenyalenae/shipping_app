<h2>Sign up for an account</h2>

<!-- Sign up failure messages -->
<ul>
    {{#each messages}}
        <li>{{this}}</li>
    {{/each}}
</ul>

<form method="POST" action="/signup">
    Username: <input name="username"/>
    Password: <input type="password" name="password"/>

    <!-- TODO two password fields for user to confirm the text typed -->

    <input type="submit" value="Sign up">
</form>

<p>If you already have an account, you can
    <a href="/login">Log in here</a>
</p>

<h2>Log in with Twitter</h2>

<p>Or you can <a href="/auth/twitter">use your Twitter account to sign in</a></p>
